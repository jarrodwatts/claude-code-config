{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/keyword-detector.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Grep|Glob|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/parallel-dispatch-guide.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/check-comments.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/workflows/require-green-tests.sh"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "./hooks/todo-enforcer.sh"
          }
        ]
      }
    ]
  }
}
